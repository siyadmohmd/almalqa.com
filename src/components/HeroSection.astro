---
import RotatingDishes from './RotatingDishes.tsx';
---

<section class="relative min-h-[90vh] flex items-center justify-center px-6 md:px-8 lg:px-12 py-16">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-gradient-to-br from-maroon/20 to-transparent"></div>
  </div>

  <div class="max-w-7xl mx-auto w-full">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-0 items-center">
      <!-- Left Content -->
      <div class="text-center space-y-6 z-10 lg:px-8">
        <h1 class="font-heading text-5xl md:text-6xl lg:text-7xl text-licorice leading-tight">
          A Place of
          <span class="block text-maroon">Gathering</span>
        </h1>
        <p class="text-licorice/70 text-lg md:text-xl max-w-md mx-auto">
          Experience authentic Arabic cuisine in the warm tradition of the Majlis. 
          Where every meal is a celebration of heritage and togetherness.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
          <a
            href="#order"
            class="inline-flex items-center justify-center bg-maroon text-desert-sand font-medium px-8 py-4 rounded-2xl text-lg transition-all hover:bg-licorice hover:scale-105 active:scale-95 shadow-lg"
          >
            Order Now
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href="#menu"
            class="inline-flex items-center justify-center bg-transparent border-2 border-licorice text-licorice font-medium px-8 py-4 rounded-2xl text-lg transition-all hover:bg-licorice hover:text-desert-sand"
          >
            View Menu
          </a>
        </div>
      </div>

      <!-- Right Content - Rotating Dishes -->
      <RotatingDishes client:load />
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-licorice/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
