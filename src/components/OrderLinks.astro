---
interface DeliveryPartner {
  name: string;
  url: string;
  color: string;
  logo?: string;
  fullWidth?: boolean;
}

const deliveryPartners: DeliveryPartner[] = [
  { 
    name: 'Keeta', 
    url: 'https://url-eu.mykeeta.com/TtxQvtGz',
    color: '#FFD700',
    logo: '/images/partners/keeta.avif',
    fullWidth: true
  },
  { 
    name: 'Talabat', 
    url: 'https://www.talabat.com/qatar/al-malqa-restaurant',
    color: '#FF5A00',
    logo: '/images/partners/talabat.png'
  },
  { 
    name: 'Snoonu', 
    url: 'https://apps.snoonu.com/#/brand/689ee1810b00664b3617cb34?share=1',
    color: '#6B4EFF',
    logo: '/images/partners/snoonu.webp'
  },
  { 
    name: 'Rafeeq', 
    url: 'https://www.gorafeeq.com/en/home/restaurants/al-malqa-restaurant-28849',
    color: '#00B4D8',
    logo: '/images/partners/rafeeq.webp'
  },
  { 
    name: 'Deliveroo', 
    url: 'https://deliveroo.com.qa/en/menu/doha/haloul-west/al-malqa-restaurant-salwa-road',
    color: '#00CCBC',
    logo: '/images/partners/deliveroo.png'
  },
];

const whatsappNumber = "+97471078400";
const whatsappMessage = encodeURIComponent("Hello! I would like to place an order.");
const whatsappUrl = `https://wa.me/${whatsappNumber.replace(/\D/g, '')}?text=${whatsappMessage}`;
---

<section class="min-h-screen py-16 md:py-24 px-4 md:px-8 bg-gradient-to-b from-desert-sand to-desert-sand/80">
  <div class="max-w-3xl mx-auto">
    <!-- Header -->
    <header class="text-center mb-12 md:mb-16">
      <h1 class="font-heading text-5xl md:text-6xl text-maroon mb-4">Order Now</h1>
      <p class="text-licorice/70 text-lg md:text-xl">
        Choose your preferred way to order
      </p>
    </header>

    <!-- Primary CTA - WhatsApp (Dark Green for Luxury) -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="group flex items-center justify-center gap-4 w-full bg-[#1a4d2e] text-white font-medium px-8 py-6 rounded-3xl text-xl transition-all hover:bg-[#143d24] hover:scale-[1.02] hover:shadow-xl mb-8"
    >
      <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
      <span>Order via WhatsApp</span>
      <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>

    <!-- Divider -->
    <div class="flex items-center gap-4 my-10">
      <div class="flex-1 h-px bg-licorice/20"></div>
      <span class="text-licorice/50 text-sm uppercase tracking-wider">or order through</span>
      <div class="flex-1 h-px bg-licorice/20"></div>
    </div>

    <!-- Delivery Partners Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {deliveryPartners.map((partner) => (
        <a
          href={partner.url}
          target="_blank"
          rel="noopener noreferrer"
          class:list={[
            "group flex items-center gap-4 bg-white/80 backdrop-blur-sm border-2 border-licorice/10 px-6 py-5 rounded-2xl transition-all hover:scale-[1.02] hover:shadow-lg hover:border-opacity-0",
            partner.fullWidth ? "sm:col-span-2" : ""
          ]}
          style={`--partner-color: ${partner.color}`}
        >
          <!-- Partner Logo or Icon -->
          {partner.logo ? (
            <img 
              src={partner.logo} 
              alt={partner.name} 
              class="w-12 h-12 rounded-xl object-contain"
            />
          ) : (
            <div 
              class="w-12 h-12 rounded-xl flex items-center justify-center text-white font-bold text-lg"
              style={`background-color: ${partner.color}`}
            >
              {partner.name.charAt(0)}
            </div>
          )}
          <div class="flex-1">
            <span class="text-licorice font-medium text-lg group-hover:text-maroon transition-colors">
              {partner.name}
            </span>
            <p class="text-licorice/50 text-sm">Order delivery</p>
          </div>
          <svg class="w-5 h-5 text-licorice/30 group-hover:text-maroon group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      ))}
    </div>

    <!-- Contact Info -->
    <div class="mt-12 text-center">
      <p class="text-licorice/60 mb-2">Prefer to call?</p>
      <a 
        href="tel:+97471078400" 
        class="text-maroon font-heading text-2xl hover:text-licorice transition-colors"
      >
        +974 7107 8400
      </a>
    </div>

    <!-- Location Card -->
    <div class="mt-12 bg-maroon/10 rounded-3xl p-8 text-center">
      <h3 class="font-heading text-xl text-licorice mb-2">Visit Us</h3>
      <p class="text-licorice/70">St 340, Salwa Road, Doha, Qatar</p>
      <a 
        href="https://www.google.com/maps/search/?api=1&query=25.2544358,51.4820538&query_place_id=ChIJc7T_gV7bRT4RfO4LvYoeIiM" 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 mt-4 text-maroon hover:text-licorice transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        Get Directions
      </a>
    </div>
  </div>
</section>
