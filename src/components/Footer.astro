    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>`
  },
  { 
    platform: 'TikTok', 
    url: 'https://www.tiktok.com/@almalqa.qa',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg>`
  },
  { 
    platform: 'Facebook', 
    url: 'https://www.facebook.com/almalqa.qa',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>`
  },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-licorice text-desert-sand">
  <!-- Pattern at top of footer -->
  <div class="pattern-divider-dark" aria-hidden="true"></div>
  
  <div class="max-w-7xl mx-auto px-6 py-16 md:py-20">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8">
      <!-- Brand -->
      <div class="space-y-4">
        <img src="/images/logo.png" alt="Al-Malqa" class="h-16 w-auto" />
        <p class="text-desert-sand/70 max-w-xs">
          A place of gathering. Authentic Arabic cuisine served in the warm tradition of the Majlis.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h4 class="font-heading text-xl text-carrot">Quick Links</h4>
        <nav class="flex flex-col gap-2">
          <a href="#home" class="text-desert-sand/70 hover:text-desert-sand transition-colors">Home</a>
          <a href="#menu" class="text-desert-sand/70 hover:text-desert-sand transition-colors">Menu</a>
          <a href="#our-story" class="text-desert-sand/70 hover:text-desert-sand transition-colors">Our Story</a>
          <a href="#order" class="text-desert-sand/70 hover:text-desert-sand transition-colors">Order Now</a>
        </nav>
      </div>

      <!-- Contact & Address -->
      <div class="space-y-4">
        <h4 class="font-heading text-xl text-carrot">Visit Us</h4>
        <address class="not-italic text-desert-sand/70 space-y-2">
          <p>St 340, Salwa Road</p>
          <p>Doha, Qatar</p>
          <p class="pt-2">
            <a href="tel:+97471078400" class="hover:text-carrot transition-colors">
              +974 7107 8400
            </a>
          </p>
        </address>
      </div>
    </div>

    <!-- Divider -->
    <div class="my-12 h-px bg-desert-sand/20"></div>

    <!-- Bottom Footer -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Copyright -->
      <p class="text-desert-sand/50 text-sm">
        Â© {currentYear} Al-Malqa Restaurant. All rights reserved.
      </p>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {socialLinks.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-desert-sand/10 flex items-center justify-center text-desert-sand/70 hover:bg-carrot hover:text-licorice transition-all"
            aria-label={`Follow us on ${social.platform}`}
          >
            <Fragment set:html={social.icon} />
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
